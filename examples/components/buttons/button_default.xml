<component>
    <previews>
        <preview width="200" height="200" 
                style_bg_color="0xdddddd" style_pad_all="10">
        </preview>
    </previews>   
    <api>  
        <prop name="button_label" type="string" default="Button"></prop>
    </api> 

    <styles>
        <style name="main" figma_node_id="1:5" bg_color="0x222222" radius="12" pad_hor="24" pad_ver="12" width="content" height="content" shadow_width="0"></style>
        
        <style name="pr" figma_node_id="1:10" bg_color="0x333333" radius="12" shadow_width="20" shadow_color="0x000000" shadow_opa="102" shadow_offset_x="0" shadow_offset_y="4" ></style>
    </styles>
    <view extends="lv_button" styles="main pr:pressed">
        <h3 heading_text="$button_label" align="center"/>
    </view>
</component>
